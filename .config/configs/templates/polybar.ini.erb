[bar/bar0]
width = 100%
height = 24
fixed-center = false

background = <%= @background %>
foreground = <%= @foreground %>

underline-size = 0

border-bottom-size = 1
border-bottom-color = <%= @underline_color %>

padding-left = 0
padding-right = 0

module-margin-left = 3
module-margin-right = 0

font-0 = Fantasque Sans Mono:style=Regular:pixelsize=12; 2
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=13; 2
font-2 = Font Awesome 5 Free:style=Regular:pixelsize=13; 2
font-3 = Font Awesome 5 Brands:pixelsize=13; 2
font-4 = Font Awesome 5 Free:style=Solid:pixelsize=10; 2
font-5 = Fantasque Sans Mono:style=Regular:pixelsize=12; 1

modules-left = i3
modules-center = xwindow
modules-right = gmail filesystem cpu cpu_freq cpu_fan memory temperature volume wlan eth battery date xkeyboard

tray-position = right
tray-padding = 2

wm-restack = i3

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = <%= @misc_color %>

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = <%= @warning_color %>
label-indicator-underline = <%= @warning_color %>

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted-prefix=" "
format-unmounted-prefix=" "
format-mounted-prefix-foreground = <%= @misc_color %>
format-unmounted-prefix-foreground = <%= @misc_color %>
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted = %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = <%= @misc_color %>

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = "1: shell;%{T5}%{T-}"
ws-icon-1 = "3: chat; "
ws-icon-2 = "9: www; "

<%# focused = Active workspace on focused monitor %>
label-focused = %index%: %icon%
label-focused-foreground = <%= @background %>
label-focused-background = <%= @focused_ws %>
label-focused-padding = 1

<%# unfocused = Inactive workspace on any monitor %>
label-unfocused = %index%: %icon%
label-unfocused-foreground = <%= @misc_color %>
label-unfocused-background = <%= @background %>
label-unfocused-padding = ${self.label-focused-padding}

<%# visible = Active workspace on unfocused monitor %>
label-visible = %index%: %icon%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

<%# urgent = Workspace with urgency hint set %>
label-urgent = %index%: %icon%
label-urgent-background = <%= @warning_color %>
label-urgent-padding = ${self.label-focused-padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground=<%= @cpu_color %>
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground=<%= @mem_color %>
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-prefix=" "
format-disconnected-prefix=" "
format-connected-prefix-foreground=<%= @net_color %>
format-disconnected-prefix-foreground=<%= @net_color %>

format-connected = <label-connected> <ramp-signal>
label-connected = %essid:0:10:..%

format-disconnected = down

ramp-signal-font = 6
ramp-signal-foreground = <%= @net_color %>
<% 10.times do |ix| %>
  ramp-signal-<%= ix %> = "<%= ("━" * ix) << "%{F#{@foreground}}" << ("━" * (9 - ix)) << "%{F-}" %>"
<% end %>

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%

[module/volume]
type = internal/pulseaudio

format-volume = <bar-volume>
format-volume-prefix = " "
format-volume-prefix-foreground=<%= @sound_color %>
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-prefix-foreground=<%= @sound_color %>
label-muted = sound muted

bar-volume-width = 10
bar-volume-gradient = false
bar-volume-indicator = ━
bar-volume-indicator-font = 6
bar-volume-indicator-foreground = <%= @sound_color %>
bar-volume-fill = ━
bar-volume-fill-font = 6
bar-volume-fill-foreground = <%= @sound_color %>
bar-volume-empty = ━
bar-volume-empty-font = 6
bar-volume-empty-foreground = <% @foreground %>

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "
format-full-prefix-foreground = <%= @misc_color %>

ramp-capacity-foreground = <%= @misc_color %>
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

animation-charging-foreground = <%= @misc_color %>

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format-prefix = " "
format-warn-prefix = " "
format-prefix-foreground = <%= @cpu_color %>
format-warn-prefix-foreground = <%= @cpu_color %>

format = <label>
format-warn = <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = <%= @warning_color %>

[module/gmail]
type = custom/script
exec = gmail.rb
tail = true
format-prefix=" "
format-prefix-foreground=<%= @misc_color %>
click-left="firefox gmail.com"

[module/shipping_forecast]
# this is a hacky trick to use format prefixes nothing appears if content is empty
type = custom/script
exec = echo 'Wight'
tail = false
format-prefix=" "
format-prefix-foreground=<%= @misc_color %>
click-left="marine.rb"

[module/cpu_freq]
# this is a hacky trick to use format prefixes nothing appears if content is empty
type = custom/script
exec = "cpu_freq.rb"
tail = true
format-prefix=" "
format-prefix-foreground=<%= @cpu_color %>

[module/cpu_fan]
# this is a hacky trick to use format prefixes nothing appears if content is empty
type = custom/script
exec = "cpu_fan.rb"
tail = false
internal = 13
format-prefix=" "
format-prefix-foreground=<%= @cpu_color %>

[module/gap]
type = custom/text
content = "   "

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
